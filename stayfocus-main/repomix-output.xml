        </div>
        
        {/* Sub-tarefas */}
        {isExpanded && (
          <div className="ml-6 mt-2">
            {/* Lista de subtarefas */}
            {(hiperfoco.subTarefas[tarefa.id] || []).map((subTarefa) => {
