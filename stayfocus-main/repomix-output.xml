              descricao,
            },
          ],
        })),
      
      atualizarRefeicao: (id, horario, descricao) =>
        set((state) => ({
          refeicoes: state.refeicoes.map((refeicao) =>
            refeicao.id === id ? { ...refeicao, horario, descricao } : refeicao
          ),
