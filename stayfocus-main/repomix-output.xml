                  {sessao.descricao && (
                    <p className="text-sm text-gray-600 dark:text-gray-400 mt-1">
                      {sessao.descricao}
                    </p>
                  )}
                  
                  <div className="flex items-center mt-2 text-xs text-gray-500 dark:text-gray-400">
                    <Clock className="h-3 w-3 mr-1" />
