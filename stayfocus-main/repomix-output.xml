          }
          return state
        }),
      
      removerCopo: () =>
        set((state) => ({
          coposBebidos: Math.max(0, state.coposBebidos - 1),
        })),
      
      ajustarMeta: (valor) =>
        set((state) => {
          const novaMeta = state.metaDiaria + valor
          if (novaMeta >= 1 && novaMeta <= 15) {
            return { metaDiaria: novaMeta }
          }
          return state
        }),
